{
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --allow-run",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "dev": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run --watch src/main.ts",
    "start": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run src/main.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "discord.js": "npm:discord.js@^14.16.3"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["require-await", "no-unused-vars"]
    }
  }
}
